<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_brands/models/rules"
    addfieldpath="/administrator/components/com_brands/models/fields"
>
    <fieldset
        name="main"
        label="COM_BRANDS_FIELDSET_MAIN_LABEL"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="component_id"
            type="hidden"
        />
        <field
            name="cat_alias"
            type="hidden"
        />
        <field
            name="logo_svg_with_fallback"
            type="hidden"
            filter="raw"
        />
        <field
            name="logo_svg_path"
            type="hidden"
        />
        <field
            name="logo_png_path"
            type="hidden"
        />
        <field
            name="favicon_zip_path"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            size="30"
            label="COM_BRANDS_NAME_LABEL"
            description="COM_BRANDS_NAME_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_BRANDS_ALIAS_LABEL"
            description="COM_BRANDS_ALIAS_DESC"
            hint="COM_BRANDS_ALIAS_HINT"
            filter="string"
            class=""
            labelclass=""
        />
        <field
            name="catid"
            type="category"
            extension="com_brands"
            class="inputbox"
            default=""
            label="COM_BRANDS_CATEGORY_LABEL"
            description="COM_BRANDS_CATEGORY_DESC"
            required="true"
            >
             <option value="">JOPTION_SELECT_CATEGORY</option>
        </field>
        <field
            name="primary_colour"
            type="color"
            label="COM_BRANDS_PRIMARY_COLOUR_LABEL"
            description="COM_BRANDS_PRIMARY_COLOUR_DESC"
            required="true"
        />
        <field
            name="secondary_colour"
            type="color"
            label="COM_BRANDS_SECONDARY_COLOUR_LABEL"
            description="COM_BRANDS_SECONDARY_COLOUR_DESC"
        />
        <field
            name="tertiary_colour"
            type="color"
            label="COM_BRANDS_TERTIARY_COLOUR_LABEL"
            description="COM_BRANDS_TERTIARY_COLOUR_DESC"
        />
        <field
            name="logo_svg"
            type="textarea"
            label="COM_BRANDS_LOGO_SVG_LABEL"
            description="COM_BRANDS_LOGO_SVG_DESC"
            filter="raw"
            class="monospace"
            rows="10"
        />
        <field
            name="upload_favicons"
            type="radio"
            label="COM_BRANDS_UPLOAD_FAVICONS_LABEL"
            description="COM_BRANDS_UPLOAD_FAVICONS_DESC"
            class="btn-group btn-group-yesno"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="icon_svg"
            type="textarea"
            label="COM_BRANDS_ICON_SVG_LABEL"
            description="COM_BRANDS_ICON_SVG_DESC"
            filter="raw"
            class="monospace"
            rows="10"
            showon="upload_favicons:0"
        />
        <field
            name="favicon_zip"
            type="file"
            label="COM_BRANDS_FAVICON_LABEL"
            description="COM_BRANDS_FAVICON_DESC"
            accept="application/x-compressed,application/x-zip-compressed,application/zip,multipart/x-zip"
            showon="upload_favicons:1"
        />
        <field name="state" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
    <fields name="params">
        <fieldset
            name="options"
            label="COM_BRANDS_FIELDSET_OPTIONS_LABEL"
        >
            <field
                name="logo_image_height"
                type="int"
                label="COM_BRANDS_LOGO_IMAGE_HEIGHT_LABEL"
                description="COM_BRANDS_LOGO_IMAGE_HEIGHT_DESC"
                default=""
            />
            <field
                name="logo_url"
                type="text"
                label="COM_BRANDS_LOGO_URL_LABEL"
                description="COM_BRANDS_LOGO_URL_DESC"
                default=""
            />
        </fieldset>
    </fields>
</form>
