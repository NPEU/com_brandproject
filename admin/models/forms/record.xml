<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_brandprojects/models/rules"
    addfieldpath="/administrator/components/com_brandprojects/models/fields"
>
    <fieldset
        name="main"
        label="COM_BRANDPROJECTS__FIELDSET_MAIN_LABEL"
    >   
        <field
            name="name"
            type="text"
            size="30"
            label="COM_BRANDPROJECTS_NAME_LABEL"
            description="COM_BRANDPROJECTS_NAME_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_BRANDPROJECTS_ALIAS_LABEL"
            description="COM_BRANDPROJECTS_ALIAS_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="id"
            type="text"
            label="COM_BRANDPROJECTS_ID_LABEL"
            description="COM_BRANDPROJECTS_ID_DESC"
            readonly="readonly"
        />        
        <field name="published" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
    
    <fields name="options">
		<fieldset
			name="options"
			label="COM_BRANDPROJECTS__FIELDSET_ADVANCED_LABEL"
			class="adminform"
		>
			<field
				name="research_terms"
				type="textarea"
				rows="10"
				label="COM_PROJECTS_RESEARCH_TERMS_LABEL"
				description="COM_PROJECTS_RESEARCH_TERMS_DESC"
				class="inputbox"
				default=""
			/>
			<field
				name="long_title"
				type="textarea"
				rows="10"
				label="COM_PROJECTS_LONG_TITLE_LABEL"
				description="COM_PROJECTS_LONG_TITLE_DESC"
				class="inputbox"
				default=""
			/>
		</fieldset>
	</fields>
</form>
