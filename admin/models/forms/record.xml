<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_brands/models/rules"
    addfieldpath="/administrator/components/com_brands/models/fields"
>
    <fieldset
        name="main"
        label="COM_BRANDS_FIELDSET_MAIN_LABEL"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="component_id"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            size="30"
            label="COM_BRANDS_NAME_LABEL"
            description="COM_BRANDS_NAME_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_BRANDS_ALIAS_LABEL"
            description="COM_BRANDS_ALIAS_DESC"
            hint="COM_BRANDS_ALIAS_HINT"
            filter="string"
            class=""
            labelclass=""
        />
        <field
            name="catid"
            type="category"
            extension="com_brands"
            class="inputbox"
            default=""
            label="COM_BRANDS_CATEGORY_LABEL"
            description="COM_BRANDS_CATEGORY_DESC"
            required="true"
            >
             <option value="0">JOPTION_SELECT_CATEGORY</option>
        </field>
        <field
            name="primary_colour"
            type="color"
            label="COM_BRANDS_PRIMARY_COLOUR_LABEL"
            description="COM_BRANDS_PRIMARY_COLOUR_DESC"
            required="true"
        />
        <field
            name="secondary_colour"
            type="color"
            label="COM_BRANDS_SECONDARY_COLOUR_LABEL"
            description="COM_BRANDS_SECONDARY_COLOUR_DESC"
        />
        <field
            name="tertiary_colour"
            type="color"
            label="COM_BRANDS_TERTIARY_COLOUR_LABEL"
            description="COM_BRANDS_TERTIARY_COLOUR_DESC"
        />
        <field
            name="logo_svg"
            type="textarea"
            label="COM_BRANDS_LOGO_SVG_LABEL"
            description="COM_BRANDS_LOGO_SVG_DESC"
            filter="raw"
        />
        <field name="state" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
</form>
